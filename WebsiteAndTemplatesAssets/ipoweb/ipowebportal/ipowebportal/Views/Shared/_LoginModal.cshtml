<div class="modal-content" id="login-modal-content">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    </div>
    <div class="modal-body">
        <h2>
            Hello. Welcome back
            @Html.Partial("~/Views/Shared/pageLoader.cshtml")
        
        </h2>
        <form id="Login-Form" role="form">
            <div class="form-group">
                <input type="text" class="form-control" id="UserName" placeholder="Email " value="">
                <label class="float__label">Email</label>
                <span id="UserNameSpan" style="font-family:FontAwesome;font-style:normal;font-weight:600;speak:none;display:inline-block;color: #D8000C;background-color: #FFD2D2;"></span>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="Password" placeholder="Password" value="">
                <label class="float__label">Password</label>
                <span id="PasswordSpan" style="font-family:FontAwesome;font-style:normal;font-weight:600;speak:none;display:inline-block;color: #D8000C;background-color: #FFD2D2;"></span>
            </div>
            <div class="form-group checkbox">
                <label class="filled-in">
                    Remember Me
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
            </div>
            <button id="submitLogin" class="btn btn-outline-primary">Login</button>

        </form>
    </div>
    <div class="modal-footer text-center">
        <div>
            <a id="FPModal" href="javascript:void(0);">Forgot Password?</a>
            <p>New to Iponigeria?</p>
            <a id="signupModal" href="javascript:void(0);"> Sign Up here</a>
        </div>
    </div>

</div>
