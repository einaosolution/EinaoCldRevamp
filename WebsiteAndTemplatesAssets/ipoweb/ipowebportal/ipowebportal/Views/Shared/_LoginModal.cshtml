<!-- signup modal content -->

<div class="modal-content" id="signup-modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    </div>
    <div class="modal-body">
        <h2>Welcome to Iponigeria <span>Individual/Corporate Sign Up </span></h2>
        <br>
        <form id="Signin-Form" role="form">

            <div class="form-group">
                <input type="text" class="form-control" id="FirstName" placeholder="First Name" required>
                <label class="float__label">First Name</label>
                <span id="FirstNameSpan" style="font-family:FontAwesome;font-style:normal;font-weight:600;speak:none;display:inline-block;color: #D8000C;background-color: #FFD2D2;"></span>
            </div>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Last Name" id="LastName" required>
                <label class="float__label">Last Name</label>
                <span id="LastNameSpan" style="font-family:FontAwesome;font-style:normal;font-weight:600;speak:none;display:inline-block;color: #D8000C;background-color: #FFD2D2;"></span>
            </div>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Email" id="Email" required>
                <label class="float__label">Email</label>
                <span id="EmailSpan" style="font-family:FontAwesome;font-style:normal;font-weight:600;speak:none;display:inline-block;color: #D8000C;background-color: #FFD2D2;"></span>
            </div>

            <div class="form-group">
                <select type="text" class="form-control" name="CategoryType" id="CategoryType">
                    <option value=""> Select Option </option>
                    <option value="1"> Applicant/Individual </option>
                    <option value="2"> Corporate/Agent </option>

                </select>
                <span id="CategorySpan" style="font-family:FontAwesome;font-style:normal;font-weight:600;speak:none;display:inline-block;color: #D8000C;background-color: #FFD2D2;"></span>
                <label class="float__label">Category</label>
            </div>

            <div class="row">
                <div class="col-sm">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" name="AcceptTerms" id="AcceptTerms">
                        <label class="custom-control-label" for="AcceptTerms" style="color:wheat">I have read and agree to the <a href="" style="color:black" data-toggle="modal" data-target="#terms">Terms & Condition</a></label>

                    </div>
                </div>
            </div>
            <button class="btn" id="submitButton" style=" border: 0;        background: #ff7800; width: 100%; padding: 8px 10px;text-transform: capitalize; font-weight: 100;" name="submitButton">Register</button>
        </form>
    </div>
    <div class="modal-footer">
        <p class="w-100">Already have an account? <a id="loginModal" href="javascript:void(0);"> Login</a></p>
    </div>
</div>
