#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../@angular/compiler-cli/src/ngcc/main-ngcc.js" "$@"
  ret=$?
else 
  node  "$basedir/../@angular/compiler-cli/src/ngcc/main-ngcc.js" "$@"
  ret=$?
fi
exit $ret
